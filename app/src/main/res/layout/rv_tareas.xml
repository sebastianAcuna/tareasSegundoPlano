<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:elevation="16dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/pencil_edit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_edit_black_24dp"
            android:layout_alignParentEnd="true"
            android:layout_margin="5dp"
            />

        <ImageView
            android:id="@+id/trash_delete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_delete_black_24dp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@id/pencil_edit"
            android:layout_margin="5dp"/>

        <TextView
            android:id="@+id/tarea_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="lectura"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/estudiante_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="maria"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tarea_rv"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/asignatura_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="lenguaje"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/estudiante_rv"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/not_rv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/asignatura_rv"
            android:text="Nota:"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/nota_rv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/not_rv"
            android:layout_below="@id/asignatura_rv"
            android:text="5.0"
            android:textSize="18sp"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>